---
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { frontmatter } = Astro.props;
const { title, author, description } = frontmatter;
const pageTitle = title;
const pageDescription = description;
const pageUrl = `https://channelincome.com${Astro.url.pathname}`;
const pageImage = "https://channelincome.com/default-og-image.jpg"; // update if you have blog thumbnail
const isBlog = true;

const formattedDate = new Date(frontmatter.pubDate).toLocaleString("en-US", {
  timeZone: "Asia/Dubai",
  year: "numeric",
  month: "long",
  day: "numeric",
  hour: "numeric",
  minute: "2-digit",
  hour12: true,
});
---

<BaseLayout {pageTitle} {pageDescription} {pageUrl} {pageImage} {isBlog}>
  <Header />
  <main class="max-w-4xl mx-auto px-4 md:px-6 py-16 text-gray-800">
    <h1 class="text-3xl md:text-4xl font-bold mb-2">{title}</h1>
    <p class="text-sm text-gray-500 mb-6">By {author} Â· {formattedDate}</p>

    <article
      class="prose prose-red prose-lg max-w-none prose-headings:text-blue-800 prose-a:text-blue-800 hover:prose-a:text-blue-700 prose-strong:text-gray-900 prose-blockquote:border-blue-400 prose-blockquote:text-gray-700 prose-img:rounded-xl prose-table:border prose-table:border-gray-300"
    >
      <slot />
    </article>
  </main>
  <Footer />
</BaseLayout>
