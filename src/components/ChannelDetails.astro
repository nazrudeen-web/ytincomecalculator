---
const { data } = Astro.props;

function formatNumber(n) {
  return new Intl.NumberFormat("en", {
    notation: "compact",
    compactDisplay: "short",
    maximumFractionDigits: 1,
  }).format(n);
}

const publishedDate = new Date(data.publishedAt).toLocaleDateString("en-US", {
  year: "numeric",
  month: "short",
  day: "numeric",
});

const topics =
  data.topicCategories?.map((url) => {
    const name = url.split("/").pop()?.replace(/_/g, " ") || "";
    return decodeURIComponent(name);
  }) || [];

const readableTopics =
  topics.length > 1
    ? topics.slice(0, -1).join(", ") + " & " + topics.slice(-1)
    : topics[0] || "Creator";

const countryCode = data.country || "US";
// 3. Convert country code to full name
const countryName = new Intl.DisplayNames(["en"], { type: "region" }).of(
  countryCode
);

// 4. Convert country code to flag emoji
function getFlagEmoji(code) {
  return code
    .toUpperCase()
    .replace(/./g, (char) => String.fromCodePoint(127397 + char.charCodeAt()));
}
const flag = getFlagEmoji(countryCode);

// 1. Estimate channel age
const publishedDateObj = new Date(data.publishedAt);
const today = new Date();
const channelAgeInDays = Math.max(
  1,
  Math.round((today - publishedDateObj) / (1000 * 60 * 60 * 24))
);

// 2. Estimated daily views
const avgDailyViews = Math.round(data.viewCount / channelAgeInDays);

// 3. Set CPM based on country (basic logic; you can expand)
let lowCPM = 1.2;
let highCPM = 4;

const highCPMCountries = ["US", "CA", "GB", "AU", "DE", "FR", "AE"];
if (highCPMCountries.includes(data.country)) {
  lowCPM = 3.5;
  highCPM = 7;
}

// 4. Calculate earnings
function estimateEarnings(views, low, high) {
  return {
    low: ((views * low) / 1000).toFixed(0),
    high: ((views * high) / 1000).toFixed(0),
  };
}

const dailyEarnings = estimateEarnings(avgDailyViews, lowCPM, highCPM);
const monthlyEarnings = estimateEarnings(avgDailyViews * 30, lowCPM, highCPM);
const yearlyEarnings = estimateEarnings(avgDailyViews * 365, lowCPM, highCPM);

// 5. Helper to format dollars
function formatUSD(amount) {
  return (
    "$" +
    new Intl.NumberFormat("en", {
      notation: "compact",
      compactDisplay: "short",
      maximumFractionDigits: 1,
    }).format(amount)
  );
}
