---
import Logo from "./shared/header/Logo.astro";
import Hamburger from "./shared/header/Hamburger.astro";
import Nav from "./shared/header/Nav.astro";
import HeaderForm from "./shared/header/HeaderForm.astro";
---

<header class="bg-white shadow">
  <div
    class="mx-auto flex flex-col gap-4 max-w-4xl items-center justify-between px-4 py-4 md:flex-row"
  >
    <div class="flex justify-between w-full md:w-auto">
      <!-- Logo -->
      <Logo />
      <!-- Hamburger (mobile) -->
      <Hamburger />
    </div>

    <!-- Nav (desktop) -->
    <Nav />

    <!-- Search Box -->
    <HeaderForm />
  </div>
</header>

<!-- JS for toggle -->
<script is:client>
  document.addEventListener("DOMContentLoaded", function () {
    const toggleBtn = document.getElementById("mobile-menu-toggle");
    const navMenu = document.getElementById("mobile-nav");

    toggleBtn.addEventListener("click", () => {
      navMenu.classList.toggle("hidden");
      navMenu.classList.toggle("flex");
    });
  });
</script>
