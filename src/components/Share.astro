    <!-- Toast -->
    <div
      id="copy-toast"
      class="hidden absolute -bottom-8 left-1/2 -translate-x-1/2 rounded bg-black px-2 py-1 text-xs text-white shadow"
    >
      Link copied!
    </div>
  </div>
